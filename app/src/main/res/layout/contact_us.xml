<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorFlowerDark"
    android:padding="10dp">

<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_gravity="center"
        android:background="@drawable/last"
        android:paddingLeft="30dp"
        android:text="SCD GOVT.COLLEGE,LUDHIANA"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold" />
</android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginTop="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:background="@drawable/last">
        </LinearLayout>

        <ImageView
            android:layout_width="156dp"
            android:layout_height="133dp"
            android:layout_gravity="center"
            android:background="@drawable/sir" />


    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:layout_marginTop="20dp"
        android:padding="3dp"
        android:background="@drawable/last"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:text="College Address:"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="20dp"
            android:textStyle="bold"
            android:text="Civil Lines, Ludhiana"
            android:textColor="@color/white"
            android:textSize="15dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="69dp"
        android:padding="3dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/last"
        android:orientation="vertical">
       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:textSize="20dp"
           android:paddingLeft="20dp"
           android:layout_marginTop="10dp"
           android:textStyle="bold"
           android:text="College Website:"/>
        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:textStyle="bold"
            android:paddingLeft="20dp"
            android:text="www.scdgovtcollege.ac.in"
            android:textColor="@color/white"
            android:textSize="15dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:padding="3dp"
        android:background="@drawable/last"
        android:orientation="vertical"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="College Email:"
            android:textSize="20dp"
            android:paddingLeft="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:textStyle="bold"
            android:paddingLeft="20dp"
            android:text="scdldhhelp@gmail.com"
            android:textColor="@color/white"
            android:textSize="15dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/call"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:padding="3dp"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:background="@drawable/last">
        <TextView
            android:id="@+id/textView"
            android:layout_marginTop="10dp"
            android:textSize="20dp"
            android:paddingLeft="20dp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contact Us:" />
    <TextView
        android:id="@+id/textView8"
        android:layout_marginTop="0dp"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:paddingLeft="20dp"
        android:textStyle="bold"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Call now: 0161-2448899" />
    </LinearLayout>
</LinearLayout>
